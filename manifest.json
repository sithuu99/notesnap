{
    "manifest_version": 3,
    "name": "NoteSnap",
    "description": "Take and organize notes while browsing.",
    "version": "0.1",
    "permissions": [
      "storage",
      "tabs",
      "contextMenus"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      },
    "action": {
      "default_popup": "popup.html"
    }
  }
  